/* pages/tools/pdf-split/index.wxss */

.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 文件选择区 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-box {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  min-height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 5rpx;
}

/* 文件信息 */
.file-section {
  margin-bottom: 30rpx;
}

.file-card {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.file-header {
  display: flex;
  align-items: center;
}

.file-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.file-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.file-meta {
  font-size: 24rpx;
  color: #999;
}

.file-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.change-btn {
  background: #3b82f6;
  color: white;
}

.delete-btn {
  background: #ef4444;
  color: white;
  width: 60rpx;
  text-align: center;
}

/* 拆分模式 */
.mode-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: block;
}

.mode-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.mode-item {
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  background: #f9fafb;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mode-item.active {
  background: #f0fdf4;
  border-color: #16a34a;
}

.mode-icon {
  font-size: 32rpx;
  margin: 0 15rpx;
}

.mode-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 拆分设置区 */
.split-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 范围输入 */
.range-input-box {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.input-group {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.input-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.page-input {
  padding: 15rpx 20rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.range-separator {
  font-size: 32rpx;
  color: #999;
  margin-top: 30rpx;
}

.add-btn {
  background: #16a34a;
  color: white;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  border: none;
  margin-top: 30rpx;
}

/* 范围列表 */
.ranges-list {
  margin-top: 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.list-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.clear-btn {
  font-size: 24rpx;
  color: #ef4444;
  padding: 8rpx 20rpx;
  background: #fee;
  border-radius: 20rpx;
}

.range-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.range-item:last-child {
  margin-bottom: 0;
}

.range-badge {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.range-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.range-delete {
  width: 50rpx;
  height: 50rpx;
  background: #ef4444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.empty-tip {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  background: #f9fafb;
  border-radius: 10rpx;
}

/* 信息卡片 */
.info-section {
  margin-bottom: 30rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
}

.info-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-desc {
  font-size: 26rpx;
  color: #666;
}

.info-detail {
  font-size: 28rpx;
  color: #16a34a;
  font-weight: bold;
}

/* 平均拆分 */
.average-box {
  margin-bottom: 30rpx;
}

.average-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.average-slider {
  width: 100%;
}

.average-preview {
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.preview-label {
  font-size: 26rpx;
  color: #666;
}

.preview-text {
  font-size: 28rpx;
  color: #16a34a;
  font-weight: bold;
}

/* 奇偶拆分 */
.oddeven-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.oddeven-item {
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  background: #f9fafb;
  border-radius: 10rpx;
}

.oddeven-label {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
}

.oddeven-preview {
  padding: 20rpx;
  background: #f0fdf4;
  border-radius: 10rpx;
  text-align: center;
}

.oddeven-preview .preview-text {
  font-size: 28rpx;
  color: #16a34a;
  font-weight: bold;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 30rpx;
}

.split-btn {
  width: 100%;
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  padding: 30rpx;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(22, 163, 74, 0.3);
}

.split-btn[disabled] {
  opacity: 0.5;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin-bottom: 30rpx;
}

.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.result-icon {
  font-size: 48rpx;
  margin-right: 15rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #16a34a;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 10rpx;
}

.result-index {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.result-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.result-range {
  font-size: 22rpx;
  color: #999;
}

.download-btn {
  background: #16a34a;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 25rpx;
  border-radius: 10rpx;
  border: none;
  line-height: normal;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 使用说明 */
.guide-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.guide-item {
  display: flex;
  align-items: flex-start;
  padding: 25rpx;
  background: #f9fafb;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.guide-item:last-child {
  margin-bottom: 0;
}

.guide-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.guide-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.guide-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}
