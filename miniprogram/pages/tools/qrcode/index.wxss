/* pages/tools/qrcode/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 分区标题 */
.section-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.title-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #4ade80 0%, #22c55e 100%);
  border-radius: 3rpx;
}

/* 输入区域 */
.input-section {
  margin-bottom: 30rpx;
}

.input-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.text-input {
  width: 260px;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

/* 二维码显示区域 */
.qrcode-section {
  margin-bottom: 30rpx;
}

.qrcode-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  position: relative;
}

.qrcode-canvas {
  display: block;
  margin: 0 auto;
}

.qrcode-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.emoji-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.placeholder-text {
  font-size: 26rpx;
  color: #999;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 30rpx;
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(34, 197, 94, 0.3);
  border: none;
}

.generate-btn::after {
  border: none;
}

.generate-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #22c55e;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.save-btn[disabled] {
  background: #f5f5f5;
  border-color: #e0e0e0;
  opacity: 0.5;
}

.generate-btn .btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.save-btn .btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #22c55e;
}

.save-btn[disabled] .btn-text {
  color: #999;
}

/* 使用提示 */
.tips-section {
  background: #f0fdf4;
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid #dcfce7;
}

.tips-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tips-title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
