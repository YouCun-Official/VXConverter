/* pages/tools/audio-format/index.wxss */

.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 20rpx;
}

/* 文件选择区 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-box {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

/* 音频列表 */
.audios-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #ef4444;
  background: #fee;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.audio-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.audio-item {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.audio-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.audio-icon {
  font-size: 50rpx;
  color: white;
}

.audio-badge {
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.info-label {
  color: #666;
  margin-right: 10rpx;
  min-width: 100rpx;
}

.info-label.success {
  color: #16a34a;
}

.info-value {
  color: #333;
  font-size: 22rpx;
}

.savings {
  color: #16a34a;
  font-weight: bold;
  font-size: 24rpx;
}

.audio-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-left: 10rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  min-width: 100rpx;
}

.save-btn {
  background: #16a34a;
  color: white;
}

.delete-btn {
  background: #ef4444;
  color: white;
}

/* 转换设置 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.settings-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.setting-item {
  margin-bottom: 30rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.setting-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 质量预设 */
.quality-presets {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.preset-btn {
  flex: 1;
  min-width: 150rpx;
  padding: 20rpx;
  text-align: center;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.preset-btn.active {
  background: #16a34a;
  color: white;
  font-weight: bold;
}

/* 操作区 */
.action-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.convert-btn {
  width: 100%;
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 15rpx;
  padding: 25rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(22, 163, 74, 0.3);
}

.convert-btn[disabled] {
  opacity: 0.7;
}

/* 统计信息 */
.stats {
  margin-top: 30rpx;
  padding: 25rpx;
  background: #f9fafb;
  border-radius: 15rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.stat-label {
  color: #666;
}

.stat-value {
  color: #333;
  font-weight: bold;
}

.stat-value.success {
  color: #16a34a;
}

/* 保存全部按钮 */
.save-all-btn {
  width: 100%;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 15rpx;
  padding: 25rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.3);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}
