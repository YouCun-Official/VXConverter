/* pages/pdf-to-word/pdf-to-word.wxss */

.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 30rpx;
  padding-bottom: 50rpx;
}

/* 页面标题区 */
.header-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 25rpx;
  line-height: 1.5;
}

.info-btn {
  background: #f3f4f6;
  color: #374151;
  border: 2rpx solid #e5e7eb;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
}

/* 文件选择区 */
.file-section {
  background: white;
  border-radius: 24rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 25rpx;
}

.section-icon {
  font-size: 36rpx;
}

.file-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

.select-btn {
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
  color: white;
  border-radius: 50rpx;
  padding: 35rpx 70rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 15rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 163, 74, 0.35);
  border: none;
  margin-bottom: 30rpx;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 32rpx;
}

.file-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.file-tips text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 文件卡片 */
.file-card {
  background: #f0fdf4;
  border: 2rpx solid #16a34a;
  border-radius: 16rpx;
  padding: 25rpx;
}

.file-info-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.file-icon {
  font-size: 60rpx;
  flex-shrink: 0;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-name {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #6b7280;
}

.remove-btn {
  width: 60rpx;
  height: 60rpx;
  background: #ef4444;
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  line-height: 1;
}

/* 转换选项区 */
.options-section {
  background: white;
  border-radius: 24rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.option-item:last-child {
  border-bottom: none;
}

.option-label {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.option-icon {
  font-size: 32rpx;
}

.option-text {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.option-name {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.option-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 转换按钮 */
.action-section {
  margin-bottom: 30rpx;
}

.convert-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  border-radius: 50rpx;
  padding: 35rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
  border: none;
}

.convert-btn[disabled] {
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
  opacity: 0.7;
}

/* 使用说明 */
.tips-section {
  background: white;
  border-radius: 24rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 25rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.tip-number {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
  padding-top: 8rpx;
}

.tips-note {
  padding: 20rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.note-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.note-text {
  flex: 1;
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 功能说明卡片 */
.features-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.feature-card {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-text {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.feature-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

.feature-desc {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.4;
}

/* 支持的格式说明 */
.support-section {
  background: white;
  border-radius: 24rpx;
  padding: 35rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.support-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #16a34a;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.support-title.not-support {
  color: #ef4444;
  margin-top: 30rpx;
}

.support-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.support-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #374151;
}

.support-item.disabled {
  color: #9ca3af;
}

.support-icon {
  font-size: 24rpx;
  font-weight: 600;
  color: #16a34a;
  flex-shrink: 0;
}

.support-item.disabled .support-icon {
  color: #ef4444;
}

/* 底部提示 */
.footer {
  text-align: center;
  padding: 30rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.5;
}
