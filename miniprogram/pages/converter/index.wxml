<!--pages/converter/index.wxml-->
<view class="container">

  <!-- 常用功能板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">热门功能</text>
    </view>

    <view class="grid-container">
      <!-- 图片转PDF -->
      <view class="grid-card" bindtap="navigateToImageConverter">
        <view class="grid-icon image-icon">
          <text class="emoji-icon">🖼️</text>
        </view>
        <view class="grid-text-container">
          <text class="grid-label">图片转PDF</text>
          <text class="grid-sub-label">（文件扫描）</text>
        </view>
      </view>

      <!-- Word转PDF -->
      <view class="grid-card" bindtap="navigateToWordConverter">
        <view class="grid-icon word-icon">
          <text class="emoji-icon">📄</text>
        </view>
        <text class="grid-label">Word转PDF</text>
      </view>

      <!-- PDF转Word -->
      <view class="grid-card" bindtap="navigateToPdfToWord">
        <view class="grid-icon pdf-to-word-icon">
          <text class="emoji-icon">📑</text>
        </view>
        <text class="grid-label">PDF转Word</text>
      </view>

      <!-- 图片文字提取 -->
      <view class="grid-card" bindtap="navigateToImageOCR">
        <view class="grid-icon ocr-icon">
          <text class="emoji-icon">🔍</text>
        </view>
        <text class="grid-label">图片文字提取</text>
      </view>
    </view>
  </view>

  <!-- PDF转其他板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">PDF转其他</text>
    </view>

    <view class="grid-container">
      <!-- PDF转PPT -->
      <view class="grid-card" bindtap="navigateToPdfToPpt">
        <view class="grid-icon pdf-to-ppt-icon">
          <text class="emoji-icon">📽️</text>
        </view>
        <text class="grid-label">PDF转PPT</text>
      </view>

      <!-- PDF转图片 -->
      <view class="grid-card" bindtap="navigateToPdfToImage">
        <view class="grid-icon pdf-to-image-icon">
          <text class="emoji-icon">🎨</text>
        </view>
        <text class="grid-label">PDF转图片</text>
      </view>

      <!-- PDF转Excel -->
      <view class="grid-card" bindtap="navigateToPdfToExcel">
        <view class="grid-icon pdf-to-excel-icon">
          <text class="emoji-icon">📊</text>
        </view>
        <text class="grid-label">PDF转Excel</text>
      </view>
    </view>
  </view>

  <!-- 其他转PDF板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">其他转PDF</text>
    </view>

    <view class="grid-container">
      <!-- PPT转PDF -->
      <view class="grid-card" bindtap="navigateToPptToPdf">
        <view class="grid-icon ppt-to-pdf-icon">
          <text class="emoji-icon">📽️</text>
        </view>
        <text class="grid-label">PPT转PDF</text>
      </view>

      <!-- Excel转PDF -->
      <view class="grid-card" bindtap="navigateToExcelToPdfNew">
        <view class="grid-icon excel-to-pdf-new-icon">
          <text class="emoji-icon">📊</text>
        </view>
        <text class="grid-label">Excel转PDF</text>
      </view>

      <!-- TXT转PDF -->
      <view class="grid-card" bindtap="navigateToTxtToPdf">
        <view class="grid-icon txt-to-pdf-icon">
          <text class="emoji-icon">📝</text>
        </view>
        <text class="grid-label">TXT转PDF</text>
      </view>

      <!-- Markdown转PDF -->
      <view class="grid-card" bindtap="navigateToMarkdownToPdf">
        <view class="grid-icon markdown-to-pdf-icon">
          <text class="emoji-icon">📑</text>
        </view>
        <text class="grid-label">Markdown转PDF</text>
      </view>
    </view>
  </view>

  <!-- PDF操作板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">PDF操作</text>
    </view>

    <view class="grid-container">
      <!-- PDF合并 -->
      <view class="grid-card" bindtap="navigateToPdfMerge">
        <view class="grid-icon pdf-merge-icon">
          <text class="emoji-icon">📚</text>
        </view>
        <text class="grid-label">PDF合并</text>
      </view>

      <!-- PDF转图片 -->
      <view class="grid-card" bindtap="navigateToPdfToImage">
        <view class="grid-icon pdf-to-image-icon">
          <text class="emoji-icon">🎨</text>
        </view>
        <text class="grid-label">PDF转图片</text>
      </view>

      <!-- PDF拆分 -->
      <view class="grid-card" bindtap="navigateToPdfSplit">
        <view class="grid-icon pdf-split-icon">
          <text class="emoji-icon">✂️</text>
        </view>
        <text class="grid-label">PDF拆分</text>
      </view>

      <!-- PDF加水印 -->
      <view class="grid-card" bindtap="navigateToPdfWatermark">
        <view class="grid-icon pdf-watermark-icon">
          <text class="emoji-icon">💧</text>
        </view>
        <text class="grid-label">PDF加水印</text>
      </view>
    </view>
  </view>



  <!-- 其他转换板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">其他工具</text>
    </view>

    <view class="grid-container">
      <!-- AI文档纠错 -->
      <view class="grid-card" bindtap="navigateToAiCorrection">
        <view class="grid-icon ai-correction-icon">
          <text class="emoji-icon">🤖</text>
        </view>
        <text class="grid-label">AI文档纠错</text>
      </view>
    </view>
  </view>

  <view class="footer">
    <text class="footer-text">更多功能即将上线</text>
  </view>
</view>
