<!--pages/converter/index.wxml-->
<view class="container">

  <!-- 常用功能板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">热门功能</text>
    </view>

    <view class="grid-container">
      <!-- 图片转PDF -->
      <view class="grid-card" bindtap="navigateToImageConverter">
        <view class="grid-icon image-icon">
          <text class="emoji-icon">🖼️</text>
        </view>
        <view class="grid-text-container">
          <text class="grid-label">图片转PDF</text>
          <text class="grid-sub-label">（文件扫描）</text>
        </view>
      </view>

      <!-- Word转PDF -->
      <view class="grid-card" bindtap="navigateToWordConverter">
        <view class="grid-icon word-icon">
          <text class="emoji-icon">📄</text>
        </view>
        <text class="grid-label">Word转PDF</text>
      </view>

      <!-- PDF转Word -->
      <view class="grid-card" bindtap="navigateToPdfToWord">
        <view class="grid-icon pdf-to-word-icon">
          <text class="emoji-icon">📑</text>
        </view>
        <text class="grid-label">PDF转Word</text>
      </view>

      <!-- 图片文字提取 -->
      <view class="grid-card" bindtap="navigateToImageOCR">
        <view class="grid-icon ocr-icon">
          <text class="emoji-icon">🔍</text>
        </view>
        <text class="grid-label">图片文字提取</text>
      </view>
    </view>
  </view>

  <!-- PDF转其他板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">PDF转其他</text>
    </view>

    <view class="grid-container">
      <!-- PDF转PPT -->
      <view class="grid-card" bindtap="navigateToPdfToPpt">
        <view class="grid-icon pdf-to-ppt-icon">
          <text class="emoji-icon">📽️</text>
        </view>
        <text class="grid-label">PDF转PPT</text>
      </view>

      <!-- PDF转图片 -->
      <view class="grid-card" bindtap="navigateToPdfToImage">
        <view class="grid-icon pdf-to-image-icon">
          <text class="emoji-icon">🎨</text>
        </view>
        <text class="grid-label">PDF转图片</text>
      </view>


    </view>
  </view>

  <!-- 其他转PDF板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">其他转PDF</text>
    </view>

    <view class="grid-container">
      <!-- PPT转PDF -->
      <view class="grid-card" bindtap="navigateToPptToPdf">
        <view class="grid-icon ppt-to-pdf-icon">
          <text class="emoji-icon">📽️</text>
        </view>
        <text class="grid-label">PPT转PDF</text>
      </view>

      <!-- Excel转PDF -->
      <view class="grid-card" bindtap="navigateToExcelToPdfNew">
        <view class="grid-icon excel-to-pdf-new-icon">
          <text class="emoji-icon">📊</text>
        </view>
        <text class="grid-label">Excel转PDF</text>
      </view>

      <!-- TXT转PDF -->
      <view class="grid-card" bindtap="navigateToTxtToPdf">
        <view class="grid-icon txt-to-pdf-icon">
          <text class="emoji-icon">📝</text>
        </view>
        <text class="grid-label">TXT转PDF</text>
      </view>

      <!-- Markdown转PDF -->
      <view class="grid-card" bindtap="navigateToMarkdownToPdf">
        <view class="grid-icon markdown-to-pdf-icon">
          <text class="emoji-icon">📑</text>
        </view>
        <text class="grid-label">Markdown转PDF</text>
      </view>
    </view>
  </view>

  <!-- PDF操作板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">PDF操作</text>
    </view>

    <view class="grid-container">
      <!-- PDF合并 -->
      <view class="grid-card" bindtap="navigateToPdfMerge">
        <view class="grid-icon pdf-merge-icon">
          <text class="emoji-icon">📚</text>
        </view>
        <text class="grid-label">PDF合并</text>
      </view>

      <!-- PDF转图片 -->
      <view class="grid-card" bindtap="navigateToPdfToImage">
        <view class="grid-icon pdf-to-image-icon">
          <text class="emoji-icon">🎨</text>
        </view>
        <text class="grid-label">PDF转图片</text>
      </view>

      <!-- PDF拆分 -->
      <view class="grid-card" bindtap="navigateToPdfSplit">
        <view class="grid-icon pdf-split-icon">
          <text class="emoji-icon">✂️</text>
        </view>
        <text class="grid-label">PDF拆分</text>
      </view>

      <!-- PDF加水印 -->
      <view class="grid-card" bindtap="navigateToPdfWatermark">
        <view class="grid-icon pdf-watermark-icon">
          <text class="emoji-icon">💧</text>
        </view>
        <text class="grid-label">PDF加水印</text>
      </view>
    </view>
  </view>

  <!-- 多媒体工具板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">多媒体工具</text>
    </view>

    <view class="grid-container">
      <!-- 视频格式转换 -->
      <view class="grid-card" bindtap="navigateToVideoFormat">
        <view class="grid-icon video-format-icon">
          <text class="emoji-icon">🎬</text>
        </view>
        <text class="grid-label">视频格式转换</text>
      </view>

      <!-- 图片格式转换 -->
      <view class="grid-card" bindtap="navigateToImageFormat">
        <view class="grid-icon image-format-icon">
          <text class="emoji-icon">🖼️</text>
        </view>
        <text class="grid-label">图片格式转换</text>
      </view>

      <!-- 音频格式转换 -->
      <view class="grid-card" bindtap="navigateToAudioFormat">
        <view class="grid-icon audio-format-icon">
          <text class="emoji-icon">🎵</text>
        </view>
        <text class="grid-label">音频格式转换</text>
      </view>

      <!-- 视频转音频 -->
      <view class="grid-card" bindtap="navigateToVideoToAudio">
        <view class="grid-icon video-to-audio-icon">
          <text class="emoji-icon">🎧</text>
        </view>
        <text class="grid-label">视频转音频</text>
      </view>

      <!-- 视频转GIF -->
      <view class="grid-card" bindtap="navigateToVideoToGif">
        <view class="grid-icon video-to-gif-icon">
          <text class="emoji-icon">📸</text>
        </view>
        <text class="grid-label">视频转GIF</text>
      </view>

      <!-- 视频压缩 -->
      <view class="grid-card" bindtap="navigateToVideoCompress">
        <view class="grid-icon video-compress-icon">
          <text class="emoji-icon">📹</text>
        </view>
        <text class="grid-label">视频压缩</text>
      </view>

      <!-- 图片压缩 -->
      <view class="grid-card" bindtap="navigateToImageCompress">
        <view class="grid-icon image-compress-icon">
          <text class="emoji-icon">🗜️</text>
        </view>
        <text class="grid-label">图片压缩</text>
      </view>

      <!-- 音频压缩 -->
      <view class="grid-card" bindtap="navigateToAudioCompress">
        <view class="grid-icon audio-compress-icon">
          <text class="emoji-icon">🔊</text>
        </view>
        <text class="grid-label">音频压缩</text>
      </view>
    </view>
  </view>


  <!-- 其他转换板块 -->
  <view class="section">
    <view class="section-header">
      <view class="section-line"></view>
      <text class="section-title">其他工具</text>
    </view>

    <view class="grid-container">

      <!-- 电子签名 -->
      <view class="grid-card" bindtap="navigateToESignature">
        <view class="grid-icon e-signature-icon">
          <text class="emoji-icon">✍️</text>
        </view>
        <text class="grid-label">电子签名</text>
      </view>

      <!-- 二维码生成 -->
      <view class="grid-card" bindtap="navigateToQrCodeGenerator">
        <view class="grid-icon qr-code-icon">
          <text class="emoji-icon">🔳</text>
        </view>
        <text class="grid-label">二维码生成</text>
      </view>

      <!-- 证件照调整尺寸 -->
      <view class="grid-card" bindtap="navigateToIDPhotoResize">
        <view class="grid-icon id-photo-icon">
          <text class="emoji-icon">📸</text>
        </view>
        <text class="grid-label">证件照调尺寸</text>
      </view>
    </view>
  </view>

  <view class="footer">
    <text class="footer-text">更多功能即将上线</text>
  </view>
</view>
