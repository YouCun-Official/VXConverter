/* pages/converter/index.wxss */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 20rpx 30rpx 100rpx 30rpx;
  display: flex;
  flex-direction: column;
}

/* 分类板块 */
.section {
  margin: 0 0 30rpx 0 !important;
  padding: 0 !important;
  width: 100% !important;
  box-sizing: border-box !important;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-line {
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #4ade80 0%, #22c55e 100%);
  border-radius: 3rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

/* 网格布局 */
.grid-container {
  display: grid !important;
  grid-template-columns: 1fr 1fr !important;
  column-gap: 15rpx !important;
  row-gap: 15rpx !important;
  box-sizing: border-box !important;
  width: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
}

.grid-card {
  background: #f0fdf4;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  height: 145rpx;
  border: 1rpx solid #dcfce7;
  box-sizing: border-box;
}

.grid-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(74, 222, 128, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.grid-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.grid-card:active::before {
  opacity: 1;
}

.grid-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

