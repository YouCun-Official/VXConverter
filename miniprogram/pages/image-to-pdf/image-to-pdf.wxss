/* pages/image-to-pdf/image-to-pdf.wxss */

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

/* 图片预览区域 */
.image-preview-section {
  flex: 1;
  background: #f0fdf4;
  border: 1rpx solid #dcfce7;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.image-grid {
  flex: 1;
  height: 800rpx;
}

.image-item {
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.image-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.delete {
  background: rgba(255, 59, 48, 0.9);
  font-size: 40rpx;
  line-height: 1;
}

.image-index {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 80rpx 40rpx;
  border: 1rpx solid #e5e7eb;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666666;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-secondary {
  background: #f0fdf4;
  color: #22c55e;
  border: 1rpx solid #dcfce7;
}

.btn-secondary:active {
  background: #dcfce7;
}

.btn-primary {
  background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
  color: white;
}

.btn-primary:active {
  opacity: 0.9;
}

.btn-primary:disabled {
  background: #e5e7eb;
  color: #9ca3af;
}

/* 进度覆盖层 */
.progress-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.progress-box {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 400rpx;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #22c55e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.progress-detail {
  font-size: 26rpx;
  color: #666;
}
